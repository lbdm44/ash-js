{
  "name": "ash-js",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint-config-ashjs": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "prettier": "2.8.4",
    "turbo": "^1.7.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@3.4.1",
  "volta": {
    "node": "18.14.0",
    "yarn": "3.4.1"
  }
}
